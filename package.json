{
  "name": "game-store-react",
  "version": "1.0.0",
  "description": "Game Store built with ReactJS",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development npm run client",
    "client": "PORT=12090 webpack serve --env development --devtool inline-source-map --hot",
    "start:azure": "REACT_APP_ENV_NAME=Azure npm start",
    "start:netlify": "REACT_APP_ENV_NAME=Netlify npm start",
    "start:render": "REACT_APP_ENV_NAME=Render npm start",
    "start:pages": "REACT_APP_ENV_NAME='GitHub Pages' npm start",
    "start:all": "npm-run-all --parallel open:server lint:watch",
    "open:server": "babel-node tools/server.js",
    "build": "NODE_ENV=production webpack --env production",
    "build:azure": "REACT_APP_ENV_NAME=Azure npm run build",
    "build:netlify": "REACT_APP_ENV_NAME=Netlify npm run build",
    "build:render": "REACT_APP_ENV_NAME=Render npm run build",
    "build:pages": "REACT_APP_ENV_NAME='GitHub Pages' npm run build",
    "postbuild": "cp dist/index.html dist/404.html",
    "lint": "node_modules/.bin/esw webpack.config.* src tools",
    "lint:watch": "npm run lint -- --watch",
    "test": "react-scripts test --watchAll=false",
    "test-headless": "npm run test",
    "start:server": "node server.js"
  },
  "keywords": [
    "react"
  ],
  "author": {
    "name": "Rong Zhuang",
    "email": "jojozhuang@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "express": "4.21.2",
    "react": "16.14.0",
    "react-bootstrap": "0.33.1",
    "react-dom": "16.14.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.22.0",
    "@babel/node": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^13.5.0",
    "babel-loader": "9.1.2",
    "clean-webpack-plugin": "1.0.1",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.32.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-react": "7.32.1",
    "eslint-watch": "8.0.0",
    "eventsource-polyfill": "0.9.6",
    "glob": "7.2.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.7.2",
    "npm-run-all": "^4.1.5",
    "purgecss-webpack-plugin": "4.1.3",
    "react-scripts": "^5.0.1",
    "serve-favicon": "2.5.0",
    "webpack": "5.102.1",
    "webpack-cli": "5.0.1",
    "webpack-dev-middleware": "5.3.3",
    "webpack-dev-server": "^4.15.2",
    "webpack-hot-middleware": "2.25.3",
    "webpack-merge": "4.2.2"
  }
}
